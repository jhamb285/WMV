/* Logo styling with glass morphism */
.app-logo {
  position: fixed;
  top: 8px;
  left: 8px;
  z-index: 60;
  
  /* Ensure transparent background */
  background: transparent;
  
  /* Smooth transitions */
  transition: all 0.3s ease;
  opacity: 1;
  transform: translateY(0);
}

.app-logo.hidden {
  opacity: 0;
  transform: translateY(-20px);
  pointer-events: none;
}

.app-logo:hover {
  transform: translateY(-1px) scale(1.02);
}

/* Glass morphed SVG logo - matching nav bar style */
.logo-svg.glass-morphed {
  width: 200px;
  height: 200px;
  
  /* Match nav bar background exactly */
  background: rgba(0, 0, 0, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  
  /* Match nav bar styling */
  border-radius: 20px;
  padding: 16px;
  border: 1px solid rgba(255, 255, 255, 0.06);
  
  /* Enhanced shadow matching nav bar */
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.4),
    0 4px 16px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.08);
  
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Logo paths - bright white to stand out against dark background */
.logo-path {
  fill: rgba(255, 255, 255, 0.9);
  stroke: rgba(255, 255, 255, 1);
  stroke-width: 0.5;
  
  /* High visibility against dark background */
  opacity: 1;
  
  /* Subtle glow for definition */
  filter: 
    drop-shadow(0 0 2px rgba(255, 255, 255, 0.3)) 
    drop-shadow(0 1px 2px rgba(0, 0, 0, 0.4));
  
  transition: all 0.3s ease;
}

/* Hover effects matching nav bar hover */
.logo-svg.glass-morphed:hover {
  background: rgba(0, 0, 0, 0.98);
  box-shadow: 
    0 12px 40px rgba(0, 0, 0, 0.5),
    0 6px 20px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.08);
  
  transform: translateY(-1px) scale(1.02);
}

.logo-svg.glass-morphed:hover .logo-path {
  fill: rgba(255, 255, 255, 1);
  stroke: rgba(255, 255, 255, 1);
  stroke-width: 0.6;
  
  filter: 
    drop-shadow(0 0 3px rgba(255, 255, 255, 0.4)) 
    drop-shadow(0 1px 3px rgba(0, 0, 0, 0.5));
}


/* Enhanced glass effect for supported browsers - matching nav bar */
@supports (backdrop-filter: blur(20px)) {
  .logo-svg.glass-morphed {
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(20px) saturate(1.2);
    -webkit-backdrop-filter: blur(20px) saturate(1.2);
  }
  
  .logo-svg.glass-morphed:hover {
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(25px) saturate(1.3);
    -webkit-backdrop-filter: blur(25px) saturate(1.3);
  }
}

/* Responsive design */
@media (max-width: 640px) {
  .app-logo {
    top: 6px;
    left: 6px;
  }
  
  .logo-svg.glass-morphed {
    width: 160px;
    height: 160px;
    padding: 12px;
  }
}

@media (max-width: 480px) {
  .app-logo {
    top: 4px;
    left: 4px;
  }
  
  .logo-svg.glass-morphed {
    width: 120px;
    height: 120px;
    padding: 8px;
  }
}

/* Performance optimizations */
.app-logo {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  will-change: transform, opacity;
}

.logo-svg.glass-morphed {
  will-change: filter, transform;
}